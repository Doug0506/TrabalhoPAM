<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_questao3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Questao3"
    android:background="@drawable/listafundos">

    <TextView
        android:id="@+id/textQ3nome"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:fontFamily="@font/font_dk"
        android:text="Nome"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="374dp"
        android:layout_height="38dp"
        android:fontFamily="@font/font_dk"
        android:text="Quais as cores da bandeira de Senegal?"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <RadioGroup
        android:layout_width="201dp"
        android:layout_height="253dp"
        android:layout_marginTop="-200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_dk"
            android:text="Verde, Amarelo e Vermelho" />

        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/font_dk"
            android:text="Vermelho,Branco e Verde" />

        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/font_dk"
            android:text="Verde, Vermelho e Branco" />

        <RadioButton
            android:id="@+id/rb4"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/font_dk"
            android:text="Branco, Azul, Amarelo" />

    </RadioGroup>

    <Button
        android:id="@+id/btnfinalizar"
        android:layout_width="350dp"
        android:layout_height="67dp"
        android:text="Finalizar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.979" />

    <ImageView
        android:id="@+id/imgsenegal"
        android:layout_width="373dp"
        android:layout_height="290dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.82"
        app:srcCompat="@drawable/senegal" />

</androidx.constraintlayout.widget.ConstraintLayout>